{
  "build": {
    "content": [
      {
        "files": [ "**/*.md" ],
        "exclude": [ "obj/**", "docs/**", "pdf/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "**/*.png", "**/*.gif", "**/*.jpg", "**/*.ico" ],
        "exclude": [ "obj/**", "docs/**", "pdf/**" ]
      }
    ],
    "dest": "docs",
    "noLangKeyword": false,
    "keepFileLink": false,
    "globalMetadata": {
      "_appFooter": "<span>Copyright Â© 2019 GHI Electronics, LLC<br>Generated by <strong>DocFX</strong></span>",
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/favicon.ico",
      "_enableSearch": true,
      "_enableNewTab": true
    }
  },
  "pdf": {
    "content": [
      {
        "files": [ "**/*.md" ],
        "exclude": [ "obj/**", "docs/**", "pdf/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "**/*.png", "**/*.gif", "**/*.jpg", "**/*.ico" ],
        "exclude": [ "obj/**", "docs/**", "pdf/**" ]
      }
    ],
    "dest": "pdf"
  }
}